@page
@model CountersApp.Pages.CountersPage

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    @Model.Message
    <div>
        <div>Id Key Value</div>
        @foreach (var counter in @Model.CountersList)
        {
            <div>@counter.Id @counter.Key @counter.Value</div>
        }
    </div>
</div>
</body>
</html>